<div class="container">
  <div class="row">
    <div class="mx-auto w-75 bg-secondary-subtle mt-5 pb-3">
      <h1 class="text-center pt-5"><%= t('defaults.login') %></h1>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group p-2">
          <%= f.label :email, User.human_attribute_name(:email) %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group p-2">
          <%= f.label :password, User.human_attribute_name(:password) %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group p-2">
          <%= check_box_tag :remember, params[:remember], true %>
          <%= label_tag :remember, t('.remember') %>
        </div>
        <div class="text-center p-2">
          <%= f.submit t('defaults.login'), class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class="text-center py-3">
        <%= link_to t('.password_reset'), new_password_reset_path %>
      </div>
    </div>
  </div>
</div>