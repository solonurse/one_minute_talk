<div class='row justify-content-around mx-auto'>
  <div class='col-lg-12 container-fluid text-center border border-warning py-2'>
    <div class="row justify-content-center pe-5">
      <div class="rounded-pill bg-secondary col-2">
        <h4>主張</h4>
      </div>
    </div>
    <div class="row mx-auto">
      <div class="col-11 border mt-3"><%= selected_memo.title %></div>
    </div>
    <div class="row">
      <div class="col-10">
        <i class="bi bi-arrow-down h2"></i>
      </div>
    </div>
    <div class="row mx-auto justify-content-around">
      <% selected_memo.explanations.each do |explanation| %>
        <div class="border col-10"><%= explanation[:element] %></div>
      <% end %>
      <div class="rounded-pill bg-secondary col-1 p-1 ms-1">
        <h4>要素</h4>
      </div>
      <div class="row">
        <div class="col-10">
          <i class="bi bi-arrow-down h2"></i>
        </div>
      </div>
    </div>
    <div class="row mx-auto pb-2 justify-content-around">
      <% selected_memo.explanations.each do |explanation| %>
        <div class="border col-10"><%= explanation[:basis] %></div>
      <% end %>
      <div class="rounded-pill bg-secondary col-1 p-1 ms-1">
        <h4>根拠</h4>
      </div>
    </div>
  </div>
</div>
