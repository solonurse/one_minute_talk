<div class='row justify-content-around mx-auto bg-body-secondary'>
  <div class='col-lg-12 container-fluid text-center border border-warning py-2'>
    <%= form_with model: selected_memo, url: pyramid_structure_path(selected_memo), local: true, data: { turbo: false } do |f| %>
      <div class="row justify-content-center me-5">
        <div class="rounded-pill bg-danger-subtle col-2 p-1 h-25">
          <h4>主張</h4>
        </div>
      </div>
      <div class="row ps-4 mt-3">
        <%= f.text_field :title, class: "col-10 text-center", value: selected_memo.title %>
      </div>
      <div class="row">
        <div class="col-4">
          <i class="bi bi-arrow-down-left h2"></i>
        </div>
        <div class="col-2 ps-4">
          <i class="bi bi-arrow-down h2"></i>
        </div>
        <div class="col-5">
          <i class="bi bi-arrow-down-right h2"></i>
        </div>
      </div>
      <div class="row text-center mx-auto justify-content-around">
        <% selected_memo.explanations.each_with_index do |explanation, i| %>
          <%= f.text_area "element_#{i}", class: "border col-3", value: explanation[:element] %>
        <% end %>
        <div class="rounded-pill bg-danger-subtle col-1 p-1 h-25">
          <h4>要素</h4>
        </div>
        <div class="row">
          <div class="col-4 pe-5">
            <i class="bi bi-arrow-down h2"></i>
          </div>
          <div class="col-2 ps-4">
            <i class="bi bi-arrow-down h2"></i>
          </div>
          <div class="col-5 ps-5">
            <i class="bi bi-arrow-down h2"></i>
          </div>
        </div>
      </div>
      <div class="row text-center mx-auto pb-2 justify-content-around">
        <% selected_memo.explanations.each_with_index do |explanation, i| %>
          <%= f.text_area "basis_#{i}", class: "border col-3", value: explanation[:basis], rows: 3 %>
        <% end %>
        <div class="rounded-pill bg-danger-subtle col-1 p-1 h-25">
          <h4>根拠</h4>
        </div>
      </div>
      <div class="col-11 mt-2">
        <%= f.submit '編集を保存する', class: "btn btn-primary text-center" %>
      </div>
    <% end %>
  </div>
</div>
