<div class="container-fluid card  bg-info">
  <div class="row">
    <div class='col-10'>
      <h2 class='text-center pt-2'>サイドメニューで選択したメモのタイトル</h2>
    </div>
    <div class='col-2 pt-2'>
      <%= link_to "#", class: "text-decoration-none align-text-top" do %>
        <i class="bi bi-pencil">編集</i>
      <% end %>
      <%= link_to "#", class: "text-decoration-none align-text-top" do %>
        <i class="bi bi-trash3 text-danger ps-2">削除</i>
      <% end %>
    </div>
  </div>
  <div class='row justify-content-around'>
    <!-- ピラミッドストラクチャー -->
    <div class='col-md-5 text-center border border-warning my-2'>
      <div class="row justify-content-center">
        <div class="rounded-pill bg-secondary col-2">
          <h4>主張</h4>
        </div>
      </div>
      <div class="row ps-4">
        <div class="col-9 border mt-3">タイトル</div>
      </div>
        <div class="row mx-auto">
          <div class="col-3">
            <i class="bi bi-arrow-down-left h2"></i>
          </div>
          <div class="col-3">
            <i class="bi bi-arrow-down h2"></i>
          </div>
          <div class="col-3">
            <i class="bi bi-arrow-down-right h2"></i>
          </div>
        </div>
        <div class="row text-center mx-auto justify-content-around">
          <div class="border col-3">主張の内容</div>
          <div class="border col-3">主張の内容</div>
          <div class="border col-3">主張の内容</div>
          <div class="rounded-pill bg-secondary col-2">
            <h4>要素</h4>
          </div>
          <div class="row">
            <div class="col-3">
              <i class="bi bi-arrow-down h2"></i>
            </div>
            <div class="col-3">
              <i class="bi bi-arrow-down h2"></i>
            </div>
            <div class="col-3">
              <i class="bi bi-arrow-down h2"></i>
            </div>
          </div>
        </div>
        <div class="row text-center mx-auto pb-2 justify-content-around">
          <div class="border col-3">根拠</div>
          <div class="border col-3">根拠</div>
          <div class="border col-3">根拠</div>
          <div class="rounded-pill bg-secondary col-2">
            <h4>根拠</h4>
          </div>
        </div>
      </div>
    </div>
    <h4 class="pt-2">例文</h4>
    <div class="row gap-2 py-2">
      <div class='col-9 border border-primary'>テキスト</div>
      <button type="button" id="open" class="btn btn-primary col-2">例文を編集</button>
    </div>
  </div>
</div>