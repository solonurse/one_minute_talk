<div class="container">
  <div class="row">
    <div class="mx-auto w-75 bg-secondary-subtle my-5 pb-3">
      <h1 class="text-center pt-5"><%= t(".title") %></h1>
      <%= form_with model: @user, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group p-2">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
        </div>
        <div class="form-group p-2">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control' %>
        </div>
        <div class="form-group p-2">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>
        <div class="form-group p-2">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'form-control' %>
        </div>
        <div class="text-center p-2">
          <%= f.submit (t 'defaults.register'), class: 'btn btn-primary' %>
        </div>
      <% end %>
      <div class="text-center my-4">
        <%= link_to auth_at_provider_path(provider: :google), method: :post, data: { turbo: false}, class: "me-2 mt-2 btn btn-primary" do %>
          <i class="bi bi-google"></i>
          <%= (t 'defaults.google_login') %>
        <% end %>
        <%= link_to auth_at_provider_path(provider: :github), method: :post, data: { turbo: false}, class: "me-2 mt-2 btn btn-dark" do %>
          <i class="bi bi-github"></i>
          <%= (t 'defaults.github_login') %>
        <% end %>
      </div>
      <div class="text-center pt-2">
        <%= link_to t(".to_login_page"), login_path, method: 'get' %>
      </div>
    </div>
  </div>
</div>