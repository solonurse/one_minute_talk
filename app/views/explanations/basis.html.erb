<div class="container-fluid text-center">
  <h3 class="my-5">伝えたい理由について具体例があれば記入してください</h3>
  <%= form_with model: @register_memo_form, url: memos_path, local: true, data: { turbo: false } do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="row">
      <h4>あなたが伝えたいこと</h4>
      <%= f.text_field :title, id: 'title-form', class: 'form-control w-50 mx-auto mt-3', value: @title %>
    </div>
    <div class="row mt-5">
      <h4 class="col-6">伝えたい理由</h4>
      <h4 class="col-6">具体例</h4>
    </div>
    <div class="row justify-content-center mt-3">
      <div class="col-5">例：人員削減になる</div>
      <div class="col-1"><i class="bi bi-arrow-right"></i></div>
      <div class="col-5">例：AIを導入することで、社員の残業時間が1時間減ることが期待される</div>
    </div>
    <% @elements.each.with_index do |(key, value), i| %>
      <div class="row justify-content-center mx-auto mt-3">
        <div class="col-5">
          <%= f.text_field "element_#{i}", class: 'form-control mx-auto', value: value %>
        </div>
        <div class="col-1"><i class="bi bi-arrow-right"></i></div>
        <div class="col-5">
          <%= f.text_field "basis_#{i}", class: 'form-control mx-auto' %>
        </div>
      </div>
    <% end %>
    <%= f.submit "例文を作成する", class: "example-button mt-5" %>
  <% end %>  
  <div class="loading-wrap">
    <%= image_tag "loading" %>
  </div>
</div>